<%- include('header'); -%>

<body>
    <div class="box" id="heading">
        <h1> <%= kindOfDay %> </h1>
    </div>
    <div class="box">
        <% for (var i=0; i<newListItems.length; i++){ %>
        <div class="item">
            <input type="checkbox">
            <p> <%= newListItems[i] %> </p>
        </div>
        <% } %>
        <form class="item" action="/" method="POST">
            <input type="text" name="newItem" placeholder="Your new Item" autocomplete="off">
            <button type="submit" name="button">+</button>
        </form>
    </div>
    <p align="center"> <a href="/about">About</a></p>
    <%- include('footer'); -%>